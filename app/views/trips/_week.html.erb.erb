<table id="week_calendar">
  <tr>
    <% @trips_by_date.keys.sort.each do |date| %>
      <td>
        <table class="day">
          <tr><th class="day_label"> <%=h Date.parse(date).strftime("%a %d %b<br />%Y") %></th></tr>
          <% @trips_by_date[date].sort {|a,b| a.depart <=> b.depart}.each do |trip|  %>
            <tr <%=h "class=#{trip.letter}" %>>
              <td>
                <%=h "#{trip.destination} #{trip.depart.strftime("%I:%M%p")}" %>
              </td>
            </tr>
          <% end %>
        </table>
      </td>
    <% end %>
    <td>
      <%= render :partial => 'destination_list' %>
    </td>
  </tr>
</table>
